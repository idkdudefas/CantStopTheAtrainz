local tool = Instance.new("Tool")
tool.Name = "A Train"
tool.RequiresHandle = false
tool.CanBeDropped = false
tool.Activated:Connect(function()
    print("Tool has been created!") -- Confirmation in console

    local player = game.Players.LocalPlayer
    local character = player.Character or player.CharacterAdded:Wait()
    local humanoid = character:FindFirstChildOfClass("Humanoid")
    local runAnim = Instance.new("Animation")
    runAnim.AnimationId = "rbxassetid://18897115785" -- Updated Run Animation ID

    local endAnim = Instance.new("Animation")
    endAnim.AnimationId = "rbxassetid://17109012516"

    local runAnimTrack = humanoid:LoadAnimation(runAnim)
    local endAnimTrack = humanoid:LoadAnimation(endAnim)

    humanoid.WalkSpeed = 100
    runAnimTrack:Play()

    -- End animation after 18.8 seconds
    delay(18.8, function()
        runAnimTrack:Stop()
        endAnimTrack:Play()
    end)

    -- Reset walkspeed after 20 seconds
    delay(20, function()
        humanoid.WalkSpeed = 16 -- Default WalkSpeed
        endAnimTrack:Stop()
    end)
end)

-- Input for PC (Key '5')
local function onInputBegan(input)
    if input.KeyCode == Enum.KeyCode.Five then
        tool:Activate()
    end
end

-- Input for Mobile (Touch Screen)
local function onTouchTap()
    tool:Activate()
end

-- Bind inputs
game:GetService("UserInputService").InputBegan:Connect(onInputBegan)
game:GetService("UserInputService").TouchTap:Connect(onTouchTap)

tool.Parent = game.Players.LocalPlayer.Backpack
